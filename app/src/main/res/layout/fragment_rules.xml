<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rules">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RULES"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. All Questions need to be answered - 1 mark each"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.No of Hard Questions: "
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 2 extra mark each"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="200dp"/>

    <TextView
        android:id="@+id/hard_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.No of Medium Level Questions: "
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 1 extra mark each"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginStart="260dp"/>

    <TextView
        android:id="@+id/medium_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.No of Easy Level Questions: "
        android:gravity="center"
        android:layout_marginTop="130dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/easy_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="215dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. Answer all questions without skipping to get +5 marks "
        android:gravity="center"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.Total No of Questions: "
        android:gravity="center"
        android:layout_marginTop="190dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/total_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:text="5" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7.No of Skips Allowed :"
        android:gravity="center"
        android:layout_marginTop="220dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/skips_allowed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="5" />

    <Button
        android:id="@+id/rulesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Contest"
        android:layout_gravity="center"/>

</FrameLayout>