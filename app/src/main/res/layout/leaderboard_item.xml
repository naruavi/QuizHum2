<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/leaderBoard_textView_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="rank"
        android:gravity="start"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/leaderBoard_textView_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="uaername"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/leaderBoard_textView_rank"
        app:layout_constraintEnd_toStartOf="@+id/leaderBoard_textView_score"
        app:layout_constraintStart_toEndOf="@+id/leaderBoard_textView_rank" />

    <TextView
        android:id="@+id/leaderBoard_textView_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="score"
        android:gravity="end"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/leaderBoard_textView_name"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>